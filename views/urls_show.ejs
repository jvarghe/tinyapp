<!-- URLs SHOW WEB PAGE
  When the user submits a new URL, the user gets re-directed to this web page.
  It shows them short and long URLs for the link they submitted.
-->


<!DOCTYPE html>
<html lang="en">

<!-- THE HEAD ELEMENT -->

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous" />

  <title>URL: Tiny App Example</title>

</head>


<!-- THE BODY ELEMENT -->

<body>

  <!-- HEADER (Embedding a partial in the file). -->

  <!-- Note: `user` (user_id) is being passed in because `_header.ejs` requires
       it. -->
  <%- include("partials/_header.ejs", user) %>

    <!-- URL CARD ELEMENT -->
    <div class="card text-center">

      <div class="card-header"></div>

      <div class="card-body">

        <!-- Display the Long URL -->
        <h5 class="card-title">TinyURL for: <%= longURL %>
        </h5>

        <p class="card-text">

          <!-- Display the Short URL -->
          Short URL ID: <a href="/u/<%= id %>">
            <%= id %>
          </a>
        </p>

      </div>

      <div class="card-footer text-muted">


        <form method="POST" action="/urls/<%= id %>">

          <!-- Label for the Input Field.  -->
          <label>
            New Long URL:
          </label>

          <!-- The input field for text. -->
          <input
            type="text"
            placeholder="Enter New Long URL Here..."
            name="longURL"
            style="width: 300px; margin: 1em"
          />

          <!-- The button that submits this form. -->
          <button type="submit"
            class="btn btn-outline-warning"
            style="width: 75px; height:30px;
              margin: 1em; display: inline-flex;
              align-items: center;">Update</button>

        </form>

      </div>

    </div>


    <!-- Scripts Supporting Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"></script>

</body>

</html>